# ref: 
# https://github.com/JustaPenguin/assetto-server-manager/wiki/HTTPS-support-with-an-Nginx-Let's-Encrypt-reverse-proxy-on-Ubuntu

server {
  listen [::]:443 ssl;
  listen 443 ssl;
  server_name {{ app_name }}.{{site_fqdn }};
  client_max_body_size 256m;

  error_page 404 /404/404-error.html;
  location /404 {
        root {{ nginx_path }}/error_pages;
  }

  error_page 500 502 503 504 /50x/50x-error.html;
  location /50x {
        root {{ nginx_path }}/error_pages;
  }

  # allow tos page
  location /tos {
    root {{ nginx_path }}/{{ site_fqdn }}/html;
    index index.html;
  }

  # allow discord redirect
  location /discord {
    root {{ nginx_path }}/{{ site_fqdn }}/html;
    index index.html;
  }

  # allow donate redirect
  location /donate {
    root {{ nginx_path }}/{{ site_fqdn }}/html;
    index index.html;
  }

  location / {
    proxy_intercept_errors on;
    proxy_pass http://localhost:{{ app_port }};
    proxy_set_header Host $host;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "upgrade";
  }

    ssl_certificate /etc/letsencrypt/live/{{ site_fqdn }}/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/{{ site_fqdn }}/privkey.pem; # managed by Certbot
#    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
#    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}


server {
 listen 80;
 listen [::]:80;
 server_name {{ app_name }}.{{site_fqdn }};

# root {{ nginx_path }}/{{ site_fqdn }}/html;

 return 301 https://{{ site_fqdn }}$request_uri;
}
