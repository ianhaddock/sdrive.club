# simview app must start before ac server starts
# installed on {{ ansible_date_time.date }}

[Unit]
Description=Simview http Server service
After=network.target

[Service]
Type=simple
Nice=0
Restart=always
RestartSec=2
StartLimitIntervalSec=10
StartLimitBurst=4
User=assetto
WorkingDirectory=/usr/local/sbin/simview
ExecStart=/usr/local/sbin/simview/SimViewHttp /usr/local/sbin/simview/config/config.toml

[Install]
WantedBy=multi-user.target
